                <label asp-for="Shipment.CallerID" class="control-label">Caller Name</label>
                <select asp-for="Shipment.CallerID" class="form-control" asp-items="ViewBag.CallerID">
                </select>
                <span asp-validation-for="Shipment.CallerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Shipment.Recipient" class="control-label"></label>
                <input asp-for="Shipment.Recipient" class="form-control" />
                <span asp-validation-for="Shipment.Recipient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shipment.Sender" class="control-label"></label>
                <input asp-for="Shipment.Sender" class="form-control" />

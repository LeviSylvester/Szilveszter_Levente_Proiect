            <div class="form-group">
                <label asp-for="Shipment.Price" class="control-label"></label>
                <input asp-for="Shipment.Price" class="form-control" />
                <span asp-validation-for="Shipment.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shipment.BookingDateTime" class="control-label"></label>
